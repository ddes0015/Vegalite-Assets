{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 300,
    "height": 200,
    "title":{"text":"Average Width over Time", "fontSize":15,"offset":15},
    "data": {"url": "https://raw.githubusercontent.com/ddes0015/Vegalite-Assets/main/data/us_tornado_dataset_1950_2021.csv"},
    "selection": {
      "State": {
        "type": "single",
        "fields": ["st"],
        "bind": {
          "st": {
            "input": "select",
            "options": [
              null,"TX","KS","OK","FL","NE"
            ],
            "labels": [
                "Show All",
                "Texas",
                "Kansas",
                "Oklahoma",
                "Florida",
                "Nebraska"
            ]
          },
          "labels": "State: "
        }
      }
    },
    "transform": [
      {"filter": {"field": "st", "oneOf": ["TX","KS","OK","FL","NE"]}},
      {"filter": {"selection": "State"}}
    ],
    "mark": {
      "type": "line",
      "point": true
    },
    "encoding": {
      "x": {"timeUnit": "year", "field": "yr", "type": "temporal"},
      "y": {"aggregate": "mean", "field": "wid", "type": "quantitative"},
      "color": {"field": "st", "type": "nominal","title":"State","scale":{"scheme":"dark2"}}
    }
  }
  