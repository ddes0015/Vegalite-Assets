{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 300,
    "height": 200,
    "title": "Injuries and Fatalities for Top 6 States",
    "data": {
        "url": "https://raw.githubusercontent.com/ddes0015/Vegalite-Assets/main/data/us_tornado_dataset_1950_2021.csv"
    },
    "params": [
        {
            "name": "Magnitude_above",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 7,
                "step": 1,
                "name": "Minimum Magnitude: "
            }
        },
        {
            "name": "State_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "TX",
                    "KS",
                    "OK",
                    "FL",
                    "NE",
                    "IA"
                ],
                "labels": [
                    "Show All",
                    "Texas",
                    "Kansas",
                    "Oklahoma",
                    "Florida",
                    "Nebraska",
                    "Iowa"
                ],
                "name": "State Selection: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.mag >= Magnitude_above"
        },
        {
            "filter": "datum.st === 'TX' || datum.st === 'KS' || datum.st === 'OK' || datum.st === 'FL' || datum.st === 'NE' || datum.st === 'IA'"
        },
        {
            "filter": "State_selection == null || datum.st == State_selection"
        },
        {
            "filter": "datum.inj > 0"
        },
        {
            "filter": "datum.fat > 0"
        },
        {
            "window": [
              {
                "op": "dense_rank",
                "field": "inj",
                "as": "rank"
              }
            ],
            "sort": [
              {
                "field": "inj",
                "order": "descending"
              }
            ],
            "groupby": ["st"]
          }
    ],
    "encoding": {
        "x": {
            "field": "fat",
            "type": "quantitative",
            "title": "Fatalities",
            "axis": {
                "grid": false
            },"scale":  {"type": "log", "domain": [1, 700], "padding": 25}
            
        },
        "y": {
            "field": "inj",
            "type": "quantitative",
            "title":"Injuries",
            "axis": {
                "grid": false
            },"scale": {"type": "log", "domain": [1, 2100], "padding": 25}
        }
    },
    "layer": [
        {
            "mark": "circle",
            "encoding": {
                "size": {
                    "field": "mag",
                    "type": "quantitative",
                    "title": "Magnitude (F)",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            1,
                            2,
                            3,
                            4,
                            5,
                            6
                        ],
                        "range": [
                            10,
                            25,
                            40,
                            60,
                            90,
                            120
                        ]
                    },
                    "legend": {
                        "format": ".1s"
                    }
                },
                "color": {
                    "field": "st",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "TX",
                            "KS",
                            "OK",
                            "FL",
                            "NE",
                            "IA"
                        ],
                        "range": [
                            "#e41a1c",
                            "#984ea3",
                            "#ff7f00",
                            "#a6cee3",
                            "#377eb8",
                            "#a65628"
                        ]
                    },
                    "title": "States"
                },
                "opacity": {
                    "value": 0.6
                },
                "tooltip": [
                    {
                        "field": "st",
                        "type": "nominal",
                        "title": "State"
                    },
                    {
                        "field": "inj",
                        "type": "quantitative",
                        "title": "Injuries",
                        "format": ","
                    },
                    {
                        "field": "fat",
                        "title": "Fatalities",
                        "type": "quantitative",
                        "format": ","
                    },
                    {
                        "field": "mag",
                        "title": "Magnitude",
                        "type": "quantitative",
                        "format": ","
                    },
                    {
                        "field": "wid",
                        "title": "Width (Yards)",
                        "type": "quantitative",
                        "format": ","
                    }
                ]
            }
        },
        {
            "mark": {
              "type": "text",
              "align": "right",
              "baseline": "middle",
              "dx": -12,
              "fontSize": 11.5,
              "fontStyle": "italic"
            },
            "encoding": {
              "text": {
                "condition": {
                  "test": "datum.rank === 1",
                  "field": "st",
                  "type": "nominal"
                },
                "value": null
              },
              "color": {
                "value": "black"
              }
            }
          }
    ]
}