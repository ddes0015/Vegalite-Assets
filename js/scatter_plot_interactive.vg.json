{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 400,
    "height": 400,
    "title": "Deaths against Magnitude",
    "data": {
        "url": "https://raw.githubusercontent.com/ddes0015/Vegalite-Assets/main/data/us_tornado_dataset_1950_2021.csv"
    },
    "params": [
        {
            "name": "Magnitude_above",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 7,
                "step": 1,
                "name": "Minimum Magnitude: "
            }
        },
        {
            "name": "State_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "TX",
                    "KS",
                    "OK",
                    "FL",
                    "NE",
                    "IA"
                ],
                "labels": [
                    "Show All",
                    "Texas",
                    "Kansas",
                    "Oklahoma",
                    "Florida",
                    "Nebraska",
                    "Iowa"
                ],
                "name": "State Selection: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.mag > Magnitude_above"
        },
        {
            "filter": "datum.st === 'TX' || datum.st === 'KS' || datum.st === 'OK' || datum.st === 'FL' || datum.st === 'NE' || datum.st === 'IA'"
        },
        {
            "filter": "State_selection == null || datum.st == State_selection"
        }
    ],
    "encoding": {
        "x": {
            "field": "fat",
            "type": "quantitative",
            "title": "Fatalities",
            "axis": {
                "tickCount": 7
            }
        },
        "y": {
            "field": "inj",
            "type": "quantitative",
            "axis": {
                "tickCount": 6
            }
        }
    },
    "layer": [
        {
            "mark": "circle",
            "encoding": {
                "size": {
                    "field": "mag",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            1,
                            2,
                            3,
                            4,
                            5,
                            6
                        ],
                        "range": [
                            10,
                            20,
                            30,
                            40,
                            50,
                            60
                        ]
                    },
                    "legend": {
                        "format": ".1s"
                    }
                },
                "color": {
                    "field": "st",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "TX",
                            "KS",
                            "OK",
                            "FL",
                            "NE",
                            "IA"
                        ],
                        "range": [
                            "#e41a1c",
                            "#984ea3",
                            "#ff7f00",
                            "#a6cee3",
                            "#377eb8",
                            "#a65628"
                        ]
                    }
                },
                "opacity": {
                    "value": 0.6
                },
                "tooltip": [
                    {
                        "field": "st",
                        "type": "nominal",
                        "title": "State"
                    },
                    {
                        "field": "inj",
                        "type": "quantitative",
                        "format": ","
                    },
                    {
                        "field": "fat",
                        "type": "quantitative",
                        "format": ","
                    },
                    {
                        "field": "mag",
                        "type": "quantitative",
                        "format": ","
                    },
                    {
                        "field": "wid",
                        "type": "quantitative",
                        "format": ","
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -12,
                "fontSize": 11.5,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {
                    "field": "st",
                    "type": "nominal"
                },
                "color": {
                    "value": "black"
                },
                "opacity": {
                    "condition": {
                        "test": "datum['st'] == 'tx' || datum['st'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Italy' || datum['Country'] == 'Yemen' ||  datum['Country'] == 'United States'",
                        "value": 1
                    },
                    "value": 0
                },
                "tooltip": [
                    {
                        "field": "st",
                        "type": "nominal",
                        "title": "State"
                    },
                    {
                        "field": "inj",
                        "type": "quantitative",
                        "format": ","
                    },
                    {
                        "field": "fat",
                        "type": "quantitative",
                        "format": ","
                    },
                    {
                        "field": "mag",
                        "type": "quantitative",
                        "format": ","
                    },
                    {
                        "field": "wid",
                        "type": "quantitative",
                        "format": ","
                    }
                ]
            }
        }
    ]
}