{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 300,
    "title": "Tornados of magnitude 4 or larger between 1950 and 2021 in USA",
    "projection": {"type": "mercator"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/ddes0015/Vegalite-Assets/main/ne_10m_admin_0_countries.topojson",
          "format": {"type": "topojson", "feature": "ne_10m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/ddes0015/Vegalite-Assets/main/js/ne_110m_graticules_5.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_5"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/ddes0015/Vegalite-Assets/main/data/us_tornado_dataset_1950_2021.csv"
        },
        "mark": {"type": "circle", "tooltip": {"content": "data"}},
        "encoding": {
          "longitude": {"field": "slon", "type": "quantitative"},
          "latitude": {"field": "slat", "type": "quantitative"},
          "size": {
            "field": "mag",
            "type": "quantitative",
            "title": "Magnitude (Richter scale)",
            "scale": {"domain": [3, 18]}
          },
          "color": {
            "field": "wid",
            "type": "quantitative",
            "title": "Width in yards",
            "scale": {"scheme": "greens", "domain":[10,4000]}
          }
        }
      }
    ]
  }