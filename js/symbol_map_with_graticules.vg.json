{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 700,
    "height": 375,
    "title": "Tornados of magnitude 4 or larger between 1950 and 2021 in the USA",
    "projection": {"type": "albersUsa"},
    "layer": [
      
      {
        "data": {
          "url": "https://raw.githubusercontent.com/ddes0015/Vegalite-Assets/main/js/ne_10m_admin_1_states_provinces.topojson",
          "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/ddes0015/Vegalite-Assets/main/js/ne_10m_ocean.topojson",
          "format": {"type": "topojson", "feature": "ne_10m_ocean"}
        },
        "mark": {"type": "geoshape", "fill": "lightblue", "stroke": "white"}
      },
      
      {
        "data": {
          "url": "https://raw.githubusercontent.com/ddes0015/Vegalite-Assets/main/data/us_tornado_dataset_1950_2021.csv"
        },
        "transform": [
          {"filter": "datum.mag >= 4"}
        ],
        "mark": {"type": "circle", "tooltip": {"content": "data"}},
        "encoding": {
          "longitude": {"field": "slon", "type": "quantitative"},
          "latitude": {"field": "slat", "type": "quantitative"},
          "tooltip": [
            {"field": "yr", "type": "ordinal", "title": "Year"},
            {"field": "st", "type": "nominal", "title": "State"},
            {"field": "mag", "type": "quantitative", "title": "Magnitude"},
            {"field": "wid", "type": "quantitative", "title": "Width (yards)"},
            {"field": "fat", "type": "quantitative", "title": "Fatalities"},
            {"field": "inj", "type": "quantitative", "title": "Injured"}
          ],
          "size": {
            "field": "wid",
            "type": "quantitative",
            "title": "Width (Yards)",
            "scale": {"domain": [2, 4000]}
          },
          "color": {
            "field": "mag",
            "type": "quantitative",
            "title": "Magnitude (Fujita scale)",
            "scale": {"scheme": "redblue", "domain":[4,7]}
          }
        }
      }
    ]
  }